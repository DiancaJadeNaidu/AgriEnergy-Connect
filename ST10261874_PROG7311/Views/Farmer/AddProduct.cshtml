@model ST10261874_PROG7311.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Add Product";
}

<!-- Add Product Styles -->
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Roboto', sans-serif;
    }

    .container {
        padding-top: 50px;
    }

    .card {
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border: none;
    }

    .card-header {
        border-radius: 15px 15px 0 0;
        background-color: #4CAF50;
        color: #fff;
        text-align: center;
        padding: 20px;
        font-size: 1.5rem;
    }

    .card-body {
        border-radius: 0 0 15px 15px;
        background-color: #fff;
        padding: 40px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 10px;
        padding: 15px;
        font-size: 1rem;
        box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #4CAF50;
        border-color: #4CAF50;
        transition: all 0.3s ease;
        border-radius: 50px;
        padding: 10px 20px;
    }

    .btn-primary:hover {
        background-color: #45a049;
        border-color: #45a049;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    .header-icon {
        font-size: 3rem;
        color: #fff;
        margin-bottom: 10px;
    }
</style>

<!-- Add Product HTML -->
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-plus-circle header-icon"></i>
                    <h2>Add Product</h2>
                </div>
                <div class="card-body">
                   <form asp-action="AddProduct" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductionDate"></label>
        <input asp-for="ProductionDate" class="form-control" type="date" />
        <span asp-validation-for="ProductionDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SelectedFarmerDbId">Select Farmer</label>
        <select asp-for="SelectedFarmerDbId" asp-items="Model.Farmers" class="form-control">
            <option value="">-- Choose Farmer --</option>
        </select>
        <span asp-validation-for="SelectedFarmerDbId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Product</button>
</form>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap and Font Awesome CDN -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<!-- jQuery and validation scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
