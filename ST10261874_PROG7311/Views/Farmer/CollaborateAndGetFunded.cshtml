@{
    ViewData["Title"] = "Collaborate & Get Funded";
}

<div class="container mt-5">
    <h2 class="text-primary mb-4">🤝 Collaborate & Get Funded</h2>
    <p class="lead">Discover exciting opportunities to connect with agricultural experts, receive funding, and work on sustainable projects together.</p>

    <!--funding Opportunities -->
    <div class="mt-4">
        <h4 class="mb-3">💰 Available Funding Opportunities</h4>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Green Innovation Grant</h5>
                        <p class="card-text">Up to R10,000 for farmers adopting eco-friendly technologies and renewable energy.</p>
                        <a href="#" class="btn btn-outline-primary">Apply Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Sustainable Crop Subsidy</h5>
                        <p class="card-text">Financial support for switching to organic and sustainable crop production methods.</p>
                        <a href="#" class="btn btn-outline-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Agri-Tech Partnership Program</h5>
                        <p class="card-text">Partner with tech companies for smart farming solutions and receive co-funding.</p>
                        <a href="#" class="btn btn-outline-primary">Join Program</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--partner With Experts -->
    <div class="mt-5">
        <h4 class="mb-3">🌱 Partner With Experts</h4>
        <p>We connect farmers with sustainability consultants, agronomists, and research institutions.</p>
        <ul class="list-group mb-3">
            <li class="list-group-item">🔬 Agricultural Innovation Network</li>
            <li class="list-group-item">🌍 Global Green Farmers Association</li>
            <li class="list-group-item">🧪 Institute for Sustainable Agriculture</li>
        </ul>
        <a href="#" class="btn btn-success">Find a Partner</a>
    </div>

    <!--grant Application Resources -->
    <div class="mt-5">
        <h4 class="mb-3">📄 Grant Application Guide</h4>
        <p>Download our complete guide on how to write successful funding applications, including templates and checklists.</p>
        <a href="/resources/GrantApplicationGuide.pdf" class="btn btn-outline-secondary" target="_blank">
            <i class="fas fa-file-pdf"></i> Download PDF Guide
        </a>
    </div>


    <!--call to Action -->
    <div class="text-center mt-5">
        <h5>Want to collaborate or get funded?</h5>
        <a href="#" class="btn btn-primary btn-lg">Start Your Application</a>
    </div>
</div>
