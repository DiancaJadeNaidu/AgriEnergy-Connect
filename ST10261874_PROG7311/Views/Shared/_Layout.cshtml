<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <title>@ViewData["Title"] - ST10261874_PROG7311</title> *@

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <style>
        body {
            background: linear-gradient(135deg, #a8edea, #fed6e3); /* Soft teal gradient */
            min-height: 100vh;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background-color: #00796b !important;
        }

        .navbar .nav-link, .navbar-brand {
            color: white !important;
        }

        .navbar .nav-link.active {
            font-weight: bold;
            border-bottom: 2px solid #ffffff;
        }

        .container main {
            background-color: rgb(237, 170, 248);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        footer {
            background-color: #004d40;
            color: white;
        }

        footer .text-muted {
            color: rgba(255,255,255,0.7) !important;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
   <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #004d40; margin-top: 1.5rem;">

        <a class="navbar-brand" href="/"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">

                @if (User.IsInRole("Farmer"))
                {
                    <li class="nav-item @(ViewData["ActivePage"] as string == "Home" ? "active" : "")">
                        <a class="nav-link" href="/Farmer/Index">Home</a>
                    </li>
 
                    <li class="nav-item @(ViewData["ActivePage"] as string == "AddProduct" ? "active" : "")">
                        <a class="nav-link" href="/Farmer/AddProduct">Add Product</a>
                    </li>
                }
                else if (User.IsInRole("Employee"))
                {
                    <li class="nav-item @(ViewData["ActivePage"] as string == "Home" ? "active" : "")">
                        <a class="nav-link" href="/Employee/Index">Home</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] as string == "View Farmers" ? "active" : "")">
                        <a class="nav-link" href="/Employee/ViewFarmers">View Farmers</a>
                    </li>
                    <li class="nav-item @(ViewData["ActivePage"] as string == "All Products" ? "active" : "")">
                        <a class="nav-link" href="/Employee/AllProducts">View Products</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 text-center">
        <div class="container">
            <span class="text-muted">&copy; 2025 Dianca Jade Naidu</span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Bundle JS (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
