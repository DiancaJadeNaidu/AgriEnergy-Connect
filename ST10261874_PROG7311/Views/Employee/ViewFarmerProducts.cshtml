@model IEnumerable<ST10261874_PROG7311.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Farmer's Products";
    var email = Model.FirstOrDefault()?.FarmerEmail;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Products Supplied by @email</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Production Date</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center">No products found.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Category</td>
                                <td>@product.ProductionDate.ToString("yyyy-MM-dd")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>